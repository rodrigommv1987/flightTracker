{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "semi": [ "error", "always" ],
        "no-unused-vars": [
            "error",
            {
                "vars":"local",
                "args": "none"
            }
        ], 
        "comma-dangle": ["error", "never"],
        "prefer-const": "error"
    }
}